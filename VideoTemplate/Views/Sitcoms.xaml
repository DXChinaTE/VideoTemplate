                    <TextBlock Name="downLoadText1" Text="全集下载" Foreground="#3FACC1" FontSize="14" Height="16" Width="Auto" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignRightWithPanel="True" Margin="0,10,20,0"></TextBlock>
